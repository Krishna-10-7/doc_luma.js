{
  "name": "@krishna.dev1/lumajs",
  "version": "0.3.0",
  "type": "module",
  "description": "Next-generation JavaScript framework combining React-like reactivity, GSAP-style animations, and Three.js-like 3D rendering in one lightweight library (~40KB total)",
  "main": "dist/luma.cjs.js",
  "module": "dist/luma.esm.js",
  "browser": "dist/luma.umd.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/luma.esm.js",
      "require": "./dist/luma.cjs.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "dev": "rollup -c -w",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .js",
    "format": "prettier --write \"src/**/*.js\"",
    "prepublishOnly": "npm run build",
    "size": "size-limit"
  },
  "keywords": [
    "framework",
    "reactive",
    "reactivity",
    "ui",
    "frontend",
    "animation",
    "3d",
    "webgl",
    "threejs",
    "gsap",
    "lightweight",
    "declarative",
    "no-build"
  ],
  "author": "LumaJS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lumajs/core"
  },
  "bugs": {
    "url": "https://github.com/lumajs/core/issues"
  },
  "homepage": "https://lumajs.dev",
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@size-limit/preset-small-lib": "^11.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "rollup": "^4.52.4",
    "size-limit": "^11.0.0",
    "vitest": "^1.2.0"
  },
  "size-limit": [
    {
      "path": "dist/luma.esm.js",
      "limit": "10 KB"
    }
  ]
}
